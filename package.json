{
  "private": true,
  "scripts": {
    "develop": "yarn workspace gatsby-site run develop",
    "build": "yarn workspace gatsby-site run build",
    "clean": "yarn workspace gatsby-site run clean && find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + && yarn"
  },
  "workspaces": {
    "packages": [
      "gatsby-site",
      "gatsby-theme",
      "gatsby-theme-directus"
    ],
    "nohoist": [
      "**/gatsby",
      "gatsby/**",
      "**/gatsby-*",
      "gatsby-*/**",
      "**/*-gatsby",
      "*-gatsby/**"
    ]
  }
}
